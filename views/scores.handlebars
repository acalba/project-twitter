<script src="/scripts/score.js"></script>
<div style="margin-bottom: 50px">
  <a href="/" class="btn btn-info">Back To Home</a>
</div>
<div class="table-responsive">
  <table class="table table-hover">
    <tr>
    <th>Rank</th>
    <th>Name</th>
    <th>Score</th>
    <th>Speed</th>
    <th>Errors</th>
    <th>Tweet</th>
    </tr>
    {{#each scores}}
      <tr>
        <td>{{@index}}</td>
        <td>{{name}}</td>
        <td>{{score}}</td>
        <td>{{speed}}</td>
        <td>{{accuracy}}</td>
        <td>{{tweet}}</td>
      </tr>
    {{/each}}
  </table>
</div>
